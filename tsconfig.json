{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": false,
    "strict": true,
    "skipLibCheck": true,
    // "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@Components/*": ["./components/*"],
      "@Lib/*": ["./lib/*"],
      "@Screens/*": ["./screens/*"],
      "@Style/*": ["./style/*"],
      "@Root/*": ["./*"]
    },
    "types": ["jest"],
    "typeRoots": ["./src/types/*", "node_modules/@types"],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "types"
  ]
}
